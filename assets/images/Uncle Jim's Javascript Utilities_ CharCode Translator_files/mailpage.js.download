// Script written by Jim Stiles
// Sends email recommending current page

function mailpage()
{
  mail_str = "mailto:?subject= Uncle Jim's JavaScripts: " + document.title;
  mail_str += "&body= I recommend this JavaScript tip site-- " + document.title;
  mail_str += ". You can check this site out at, " + location.href; 
  location.href = mail_str;
}
